          </div>
          <div class="col-md-3">
            <div class="box">
              <%= link_to 'https://j-and-a-select.herokuapp.com/products/44' do %><%= image_tag("item_3.jpg") %><% end %>
            </div>
            <div class="box">
              <%= link_to 'https://j-and-a-select.herokuapp.com/products/41' do %><%= image_tag("item_4.jpg") %><% end %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="box three">
              <%= link_to 'https://j-and-a-select.herokuapp.com/products/60' do %><%= image_tag("item_5.jpg") %><% end %>
            </div>
