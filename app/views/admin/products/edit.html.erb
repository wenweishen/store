<div class="col-md-10 col-centered">
  <div class="panel-default">
    <div class="panel-heading">
      <p>编辑新商品</p>
    </div>
    <div class="panel-body">
      <%= simple_form_for [:admin, @product] do |f| %>
        <!-- 商品名称 -->
        <%= f.input :title, :label => "商品名", placeholder: "名称" %>
        <!-- 商品敘述 -->
        <%= f.input :description, :label => "商品描述", placeholder: "商品描述", input_html: { :wrap => :soft, :rows => 20} %>
        <!-- 商品售价 -->
        <%= f.input :price, :label => "价格", placeholder: "价格" %>
        <!-- 商品库存数量 -->
        <%= f.input :quantity, :label => "库存", placeholder: "库存" %>
        <!-- 选择分类 -->
        <%= f.input :category_id, :label => t('f-product-category'), :collection => @categories, :checked => @product.category, input_html: { class: 'width-50' } %>
        <!-- 编辑类别 -->
        <div class="group">
          <%= f.select :category_id, @categories %>
        </div>
        <!-- 编辑类别结束 -->
        <!-- 编辑图片 -->
        <!-- <%= f.input :image, :label => "图片", placeholder: "图片", as: :file %> -->
        <!-- 当前的所有图片显示开始 -->
        <% if @product.product_images.present? %>
          <span>目前商品图</span>
          <br>
          <% @product.product_images.each do |p| %>
            <%= image_tag p.image.thumb.url %><br>
          <% end %>
        <% end %>
        <!-- 当前的所有图片显示结束 -->
        <!-- 添加新的图片 -->
        <div class="group">
          <%#= f.input :image, as: :file %>
          <%= f.label :商品展示图 %><br>
          <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>
        </div>
        <!-- 添加新的图片结束 -->

        <!-- 当前的商品详情区域所有图片显示 -->
        <% if @product.product_images.present? %>
          <span>目前商品详情图片</span> <br>
          <% @product.product_images.each do |p| %>
            <%= image_tag p.image.thumb.url %><br>
          <% end %>
        <% end %>
        <!-- 当前的商品详情区域所有图片显示结束 -->

        <!-- 为商品详情区域添加新的图片 -->
        <div class="group">
          <%#= f.input :image, as: :file %>
          <%= f.label :商品详情区域图片 %><br>
          <%= f.file_field :image, :multiple => true, name: "pictures[image][]" %>
        </div>
        <!-- 为商品详情区域添加新的图片结束 -->
        <div class="form-group">
          <%= f.label :friendly_id %>
          <%= f.text_field :friendly_id, :required => true, :class => "form-control" %>
          <p class="help-block">限小写英数字及横线，将作为网址的一部分</p>
        </div>
        <br>
        <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交。。。"} %>
      <% end %>
    </div>
  </div>
</div>
