<div class="col-md-10 col-centered">
  <div class="panel-default">
    <div class="panel-heading">
      <p>添加新商品</p>
    </div>
    <div class="panel-body">
      <%= simple_form_for [:admin, @product] do |f| %>
        <!-- 商品名称 -->
        <%= f.input :title, :label => "商品名", placeholder: "名称" %>
        <!-- 商品敘述 -->
        <%= f.input :description, :label => "商品描述", placeholder: "商品描述", input_html: { :wrap => :soft, :rows => 5} %>
        <!-- 商品售价 -->
        <%= f.input :price, :label => "价格", placeholder: "价格" %>
        <!-- 商品库存数量 -->
        <%= f.input :quantity, :label => "库存", placeholder: "库存" %>
        <!-- 选择分类 -->
        <%= f.input :category_id, :label => t('f-product-category'), :collection => @categories, :checked => @product.category, input_html: { class: 'width-50' } %>
        <!-- 上传图片 -->
        <!-- <%= f.input :image, :label => "图片", placeholder: "图片", as: :file %> -->
        <!-- 添加新的图片 -->
        <div class="group">
          <%#= f.input :image, as: :file %>
          <%= f.label :商品展示图片 %><br>
          <%= f.file_field :image, :multiple => true, name: "product_images[image][]" %>
        </div>
        <!-- 添加新的图片结束 -->
        <!-- 为商品详情区域添加新的图片 -->
        <div class="group">
          <%#= f.input :image, as: :file %>
          <%= f.label :商品详情区域图片 %><br>
          <%= f.file_field :image, :multiple => true, name: "product_images[image][]" %>
        </div>
        <!-- 为商品详情区域添加新的图片结束 -->
        <!-- 商品精选与否 -->
        <span class="hidden-box">
          <%= f.input :is_chosen, :label => t('f-product-chosen') %>
        </span>
        <!-- 商品隱藏與否 -->
        <span class="hidden-box">
          <%= f.input :is_hidden, :label => t('f-hide') %>
        </span>
        <div class="form-group">
          <%= f.label :friendly_id %>
          <%= f.text_field :friendly_id, :required => true, :class => "form-control" %>
          <p class="help-block">限小写英数字及横线，将作为网址的一部分</p>
        </div>
        <br>

        <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交。。。"} %>
      <% end %>
    </div>
  </div>
</div>
