<div class="row", style="margin-left: -200px;">
  <br>
  <br>
  <br>
  <br>
  <div class="col-md-10 col-md-offset-1">
    <h2> New Product </h2>
  
    <%= simple_form_for [:admin, @product] do |f| %>
      <div class="group">
        <%= f.input :title %>
      </div>
      <div class="group">
        <%= f.input :description %>
      </div>
      <div class="group">
        <%= f.input :quantity %>
      </div>
      <div class="group">
        <%= f.input :price %>
      </div>
      <div class="group">
        <%= f.input :image, as: :file %>
      </div>
      <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
    <% end %>
  </div>
</div>
